{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block body %}
	<div class="container-fluid text-center bg-warning">
		<h1>Listes des Régions françaises</h1>
		<div class="row">
			{% for maRegion in maRégion %}
				<div class="col-md-4">
					<div class="card text-white bg-info mb-3">
						<div class="card-header">{{maRegion.code}}</div>
						<div class="card-body">
							<h4 class="card-title">{{maRegion.nom}}</h4>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
